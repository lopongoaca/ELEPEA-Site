---
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.icon" type="image/x-icon" />
		<meta name="description" content="ELEPEA_ [Development - Design - Advertisement]">

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content="https://lpa.com.co/">
		<meta property="og:type" content="website">
		<meta property="og:title" content="ELEPEA_ [Development - Design - Advertisement]">
		<meta property="og:description" content="ELEPEA_ [Development - Design - Advertisement]">
		<meta property="og:image" content="/share-image.png">

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="lpa.com.co">
		<meta property="twitter:url" content="https://lpa.com.co/">
		<meta name="twitter:title" content="ELEPEA_ [Development - Design - Advertisement]">
		<meta name="twitter:description" content="ELEPEA_ [Development - Design - Advertisement]">
		<meta name="twitter:image" content="/share-image.png">


		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	@import url("https://fonts.googleapis.com/css2?family=Source+Code+Pro:wght@200;900&display=swap");

	body {
		background: #000000;
		color: #fff;
		font-family: "Source Code Pro", monospace;
	}
</style>
